    <% end %>

    <div class='m-4'>
      <%= link_to new_user_daily_target_path(user) do %>
        <button class='hover:bg-blue-lightest w-full font-bold p-2 border-2 border-indigo text-indigo no-underline text-center'>
          Update
        </button>
      <% end %>
    </div>

  </div>
</div>
