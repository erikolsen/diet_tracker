<div class='px-4 w-full lg:w-1/3'>
  <div class="bg-white shadow-lg rounded-lg overflow-hidden pt-4 mb-4">
    <div class="mb-2 text-center text-2xl">
      <%= link_to "#{user.first_name.capitalize} #{user.last_name.capitalize}", user_path(user), class: 'no-underline hover:text-blue hover:bg-white' %>
