<div class='bg-black p-2 h-12 flex justify-between'>
  <div class='flex'>
    <h1 class='text-white'>
      Diet Tracker
    </h1>
  </div>

  <div class='flex'>
    <ul class="list-reset flex">
      <li class="mr-6">
        <%= link_to 'Edit', edit_user_path(@user), class: 'text-white' %>
      </li>
      <li class="mr-6">
        <%= link_to 'Back', users_path, class: 'text-white' %>
      </li>
    </ul>
  </div>
</div>
<%= react_component("users/DailyView", { firstName: "#{@user.first_name}" }) %>

<p id="notice"><%= notice %></p>

<div class='flex justify-between'>
  <p>
    <strong>First name:</strong>
    <%= @user.first_name %>
  </p>

  <p>
    <strong>Last name:</strong>
    <%= @user.last_name %>
  </p>

  <p>
    <strong>Email:</strong>
    <%= @user.email %>
  </p>
</div>

<br>

