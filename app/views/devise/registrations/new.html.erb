<div class='h-screen bg-blue-lightest py-32'>
  <div class="bg-white shadow-lg rounded-lg overflow-hidden pt-8 mb-4 mx-8 py-8">
    <p class='text-5xl text-center'>Sign up</p>

    <div class='text-5xl p-8'>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
        <div class="my-8">
          <%= f.label :first_name %><br />
          <%= f.text_field :first_name, autofocus: true, class: 'border border-grey w-full p-4 my-4' %>
        </div>

        <div class="my-8">
          <%= f.label :last_name %><br />
          <%= f.text_field :last_name, class: 'border border-grey w-full p-4 my-4' %>
        </div>

        <div class="my-8">
          <%= f.label :email %><br />
          <%= f.email_field :email, autocomplete: "email", class: 'border border-grey w-full p-4 my-4' %>
        </div>

        <div class="my-8">
          <%= f.label :password, class: 'my-8' %>
          <% if @minimum_password_length %>
          <em class='py-8'>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: 'border border-grey my-8 w-full p-4 my-4' %>
        </div>

        <div class="my-8">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'border border-grey w-full p-4 my-4' %>
        </div>

        <div class="actions">
          <%= f.submit "Sign up", class: 'border-2 border-indigo py-2 px-4 rounded-lg w-full' %>
        </div>
      <% end %>

      <div class='mt-8'>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
